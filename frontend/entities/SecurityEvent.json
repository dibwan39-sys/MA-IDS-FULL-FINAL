
{
  "name": "SecurityEvent",
  "type": "object",
  "properties": {
    "event_type": { "type": "string", "enum": ["dos","probe","r2l","u2r","normal","suspicious"] },
    "source_ip": { "type": "string" },
    "dest_ip": { "type": "string" },
    "protocol": { "type": "string" },
    "port": { "type": "number" },
    "severity": { "type": "string", "enum": ["critical","high","medium","low","info"] },
    "action_taken": { "type": "string", "enum": ["blocked","allowed","flagged","quarantined"] },
    "payload_size": { "type": "number" },
    "details": { "type": "string" },
    "ml_confidence": { "type": "number" }
  },
  "required": ["event_type","source_ip","severity"]
}
